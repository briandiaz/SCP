<div class="col-md-8 col-md-offset-2">
  <div class="grid simple">
    <div class="grid-title no-border">
      <h4><%= t("cam_locations") %> <%= t("form.titles.details").html_safe %></h4>
      <div class="tools">
        <a href="javascript:;" class="collapse"></a>
        <a href="javascript:;" class="reload"></a>
      </div>
    </div>
    <div class="grid-body no-border">
      <br>

      <%= form_for @cam_location, :html => {:role => "form", :novalidate =>"novalidate"}  do |f| %>
      <% if @cam_location.errors.any? %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <strong>Nooo!</strong> <%= t("form.errors.found") %> <%= pluralize(@cam_location.errors.count, "error") %>. <a href="#" class="alert-link"><%= t("form.errors.change") %></a> <%= t("form.errors.try") %>.
        <ul>
          <% @cam_location.errors.full_messages.each do |msg| %>
          <li class="alert-link"><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <div class="form-group">
        <%= f.label :location, :class => 'form-label' %>
        <div class="input-with-icon  right error-control">
          <i class="fa-exclamation fa"></i>
          <%= f.text_field :location, :class => 'form-control',:required => true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :ip_addres, :class => 'form-label' %>
        <div class="input-with-icon  right error-control">
          <i class="fa-exclamation fa"></i>
          <%= f.text_field :ip_addres, :class => 'form-control',:required => true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :mac_address, :class => 'form-label' %>
        <div class="input-with-icon  right error-control">
          <i class="fa-exclamation fa"></i>
          <%= f.text_field :mac_address, :class => 'form-control',:required => true %>
        </div>
      </div>

      <div class="form-actions">
        <div class="pull-right">
          <%= f.submit t("form.buttons.save"), :class => 'btn btn-primary btn-cons' %>
          <%= link_to cam_locations_path, :class=> "btn btn-danger btn-cons" do %>
          <%= t("form.buttons.cancel") %>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>