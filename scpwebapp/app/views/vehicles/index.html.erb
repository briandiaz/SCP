<% title t "vehicles" %>
<% icon_title "car" %>
<% go_back_link root_path %>

<div class="row-fluid">
  <div class="span12">
    <div class="grid simple ">
      <div class="grid-title">
        <h4><%= t "listings" %> <span class="semi-bold"><%= t"vehicles"%></span></h4>
        <div class="tools">
          <a href="javascript:;" class="collapse"></a>
          <a href="javascript:;" class="reload"></a>
        </div>
      </div>
      <div class="grid-body ">
        <table class="table table-hover table-condensed" id="example">
          <thead>
            <tr>
              <th style="width:10%">ID</th>
              <th><%= t "properties.owner" %></th>
              <th><%= t "properties.brand" %></th>
              <th><%= t "properties.model" %></th>
              <th><%= t "properties.year" %></th>
              <th><%= t "properties.color" %></th>
              <th><%= t "properties.special_signs" %></th>
              <th><%= t "properties.plate" %></th>
              <th style="width:10%"><%=t '.actions', :default => t("helpers.actions") %></th>
            </tr>
          </thead>
          <tbody>
            <% @vehicles.each do |vehicle| %>
            <tr data-id="<%= vehicle.id %>">
              <td><%= link_to vehicle.id, vehicle %></td>
              <td><%= link_to person_credentials(vehicle.owner.person), vehicle.owner.person if vehicle.owner %></td>
              <td><%= link_to vehicle.brand.name, vehicle.brand %></td>
              <td><%= link_to vehicle.model.name, vehicle.model %></td>
              <td><%= vehicle.year %></td>
              <td><%= vehicle.color %></td>
              <td><%= vehicle.special_signs %></td>
              <td><%= vehicle.plate_number %></td>
              <td>
                <%= link_to vehicle, "style"=> "color:light-blue" do %>
                <%= glyph(:eye_open) %>
                <% end %>
                <%= link_to edit_vehicle_path(vehicle), "style"=> "color:orange"  do %>
                <%= glyph(:edit) %>
                <% end %>
                <%= link_to vehicle_path(vehicle),
:method => 'delete',
:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, "style"=> "color:red" do %>
                <%= glyph(:remove) %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>


        <%= link_to new_vehicle_path, :class => 'btn btn-primary btn-cons' do%>
        <%= glyph(:plus) %> <%= t "layout.buttons.create" %> <%= t('.new', :default => t("helpers.links.new")) %> <%= yield(:title) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
