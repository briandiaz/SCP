<% title "Vehicles" %>
<% icon_title "car" %>
<% sub_title "#" + @vehicle.id.to_s %>
<% go_back_link vehicles_path %>

<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-12 ">	
    <div class="grid simple ">
      <div class="grid-title">
        <%= link_to edit_vehicle_path(@vehicle), :class => 'btn btn-warning'  do %>
        <%= glyph(:edit) %> <%= t('.edit', :default => t("helpers.links.edit")) %>
        <% end %>
        <%= link_to vehicle_path(@vehicle),
:method => 'delete',
:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
:class => 'btn btn-danger' do %>
        <%= glyph(:remove) %> <%= t('.destroy', :default => t("helpers.links.destroy")) %>
        <% end %>
        <div class="tools">
          <a href="javascript:;" class="collapse"></a>
          <a href="javascript:;" class="reload"></a>
        </div>
      </div>
      <div class="grid-body ">
        <div class="row">
          <div class="col-sm-6 col-md-6">
            <img src="<%= @vehicle_image %>" class="img-responsive">
          </div>
          <div class="col-sm-6 col-md-6">
            <dl class="dl-horizontal">
              <dt><strong>Owner:</strong></dt>
              <dd><%= link_to person_credentials(@vehicle.owner.person), @vehicle.owner %></dd>
              <dt><strong>Brand:</strong></dt>
              <dd><%= link_to @vehicle.brand.name, @vehicle.brand %></dd>
              <dt><strong>Model:</strong></dt>
              <dd><%= link_to @vehicle.model.name, @vehicle.model %></dd>
              <dt><strong>Year:</strong></dt>
              <dd><%= @vehicle.year %></dd>
              <dt><strong>Color:</strong></dt>
              <dd><%= @vehicle.color %></dd>
              <dt><strong>Special signs:</strong></dt>
              <dd><%= @vehicle.special_signs %></dd>
              <dt><strong>Plate number:</strong></dt>
              <dd><%= @vehicle.plate_number %></dd>
            </dl>

          </div>
        </div>

      </div>
    </div>
  </div> 
</div> 
